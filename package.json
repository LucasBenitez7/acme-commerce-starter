{
  "name": "acme-commerce-starter",
  "version": "0.1.0",
  "packageManager": "pnpm@10.18.3",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "pnpm -C apps/web exec eslint --fix --max-warnings=0 --no-warn-ignored",
      "pnpm -C apps/web exec prettier --write"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "@tailwindcss/oxide",
      "unrs-resolver",
      "@prisma/client",
      "prisma",
      "@prisma/engines",
      "esbuild"
    ]
  },
  "keywords": [],
  "author": "Lucas",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
